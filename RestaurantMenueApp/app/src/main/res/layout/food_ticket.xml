<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="63pt"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="@color/gray"
              android:padding="3pt"
>

    <LinearLayout
            android:gravity="center"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt" app:srcCompat="@drawable/nescafee" android:id="@+id/ivfood"/>
        <TextView
                android:gravity="center"
                android:text="Nescaffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>